{% extends 'dashboard.twig' %}
{% import 'form.twig' as form %}

{% block head %}
		<meta name="description" content="{{ head.description }}">
		<meta name="author" content="{{ head.author }}">

		<title>{{ head.title }}</title>
{% endblock %}

{% block content %}

	<!-- ======= Update Store Section ======= -->
	<section id="updateStore" class="section">
		<div class="container">
			<h1 class="section__title">Modifier le point de vente</h1>
			<p class="section__subtitle">
				Est dolorum ut non facere possimus quibusdam eligendi voluptatem. Quia id aut similique quia voluptas sit quaerat debitis. Rerum omnis ipsam aperiam consequatur laboriosam nemo harum praesentium.
			</p>
			<div class="row">
				<div class="col-lg-8 col-md-10 mx-auto">
					<form name="updateStoreForm" id="updateStoreForm" action="" method="POST" novalidate>

						{{ form.text('name', 'Nom du point de vente:', 'Veuillez entrer le nom du point de vente.', '', store.name) }}
						{{ form.textarea('description', 'Description :', 'Veuillez entrer une description.', '', store.description) }}

						{{ form.select('type', 'Type :', [{"value": "Vente à la ferme"}, {"value": "Marchés"}, {"value": "Drive fermier"}], 'Veuillez entrer un type de point de vente.', store.type) }}
						
						{{ form.text('address', 'Adresse :', 'Veuillez entrer l\'adresse du point de vente.', '', store.address) }}
						{{ form.text('postalCode', 'Code postal :', 'Veuillez entrer le code postal.', '', store.postal_code) }}
						{{ form.text('city', 'Ville :', 'Veuillez entrer la ville.', '', store.city) }}
						{{ form.text('country', 'Pays :', 'Veuillez entrer le pays.', '', store.country) }}
						<div id="updateStoreMap"></div>								 
						{{ form.text('lat', 'Latitude :', 'Veuillez entrer les coordonnées géographiques.', '', store.wkt | latitude) }}
						{{ form.text('lng', 'Longitude :', 'Veuillez entrer les coordonnées géographiques.', '', store.wkt | longitude) }}

						{{ form.checkbox('Alcool', 'checkbox[]', 'Alcool / cidre / bière', '1', 'Alcool / cidre / bière' in store.family_name|products ? 'checked' : null) }}
						{{ form.checkbox('Jus', 'checkbox[]', 'Jus / Boissons sans alcool', '2', 'Jus / Boissons sans alcool' in store.family_name|products ? 'checked' : null) }}
						{{ form.checkbox('Infusion', 'checkbox[]', 'Thé / infusion', '3', 'Thé / infusion' in store.family_name|products ? 'checked' : null) }}
						{{ form.checkbox('Lait', 'checkbox[]', 'Lait / beurre / glace', '4', 'Lait / beurre / glace' in store.family_name|products ? 'checked' : null) }}
						{{ form.checkbox('Fromage', 'checkbox[]', 'Fromage', '5', 'Fromage' in store.family_name|products ? 'checked' : null) }}
						{{ form.checkbox('Œufs', 'checkbox[]', 'Œufs', '6', 'Œufs' in store.family_name|products ? 'checked' : null) }}
						{{ form.checkbox('Farine', 'checkbox[]', 'Farine', '7', 'Farine' in store.family_name|products ? 'checked' : null) }}                        
						{{ form.checkbox('Légumes', 'checkbox[]', 'Légumes', '8', 'Légumes' in store.family_name|products ? 'checked' : null) }}
						{{ form.checkbox('Fruits', 'checkbox[]', 'Fruits', '9', 'Fruits' in store.family_name|products ? 'checked' : null) }}
						{{ form.checkbox('Bœuf', 'checkbox[]', 'Viande de bœuf / veau', '10', 'Viande de bœuf / veau' in store.family_name|products ? 'checked' : null) }}
						{{ form.checkbox('Mouton', 'checkbox[]', 'Viande d\'agneau / mouton / chèvre', '11', 'Viande d\'agneau / mouton / chèvre' in store.family_name|products ? 'checked' : null) }}
						{{ form.checkbox('Volaille', 'checkbox[]', 'Viande de volaille / lapin', '12', 'Viande de volaille / lapin' in store.family_name|products ? 'checked' : null) }}
						{{ form.checkbox('Porc', 'checkbox[]', 'Viande de porc / charcuterie', '13', 'Viande de porc / charcuterie' in store.family_name|products ? 'checked' : null) }}
						{{ form.checkbox('Miel', 'checkbox[]', 'Miel', '14', 'Miel' in store.family_name|products ? 'checked' : null) }}
						{{ form.checkbox('Escargots', 'checkbox[]', 'Escargots', '15', 'Escargots' in store.family_name|products ? 'checked' : null) }}
						{{ form.checkbox('Poisson', 'checkbox[]', 'Poisson / fruit de mer / algues', '16', 'Poisson / fruit de mer / algues' in store.family_name|products ? 'checked' : null) }}
						{{ form.checkbox('Aromates', 'checkbox[]', 'Aromates / épices', '17', 'Aromates / épices' in store.family_name|products ? 'checked' : null) }}

						{{ form.text('phone', 'Téléphone :', '', store.phone) }}
						{{ form.text('email', 'Adresse électronique :', '', store.email) }}
						{{ form.text('website', 'Site internet :', '', store.website) }}
						{{ form.text('facebook', 'Page Facebook :', '', store.facebook) }}
						{{ form.text('twitter', 'Page Twitter :', '', store.twitter) }}
						{{ form.text('instagram', 'Page Instagram :', '', store.instagram) }}                                              
						{{ form.text('monday', 'Lundi :', '', store.monday) }}
