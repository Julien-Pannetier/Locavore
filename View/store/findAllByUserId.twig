{% extends 'dashboard.twig' %}

{% block description %}
    Description
{% endblock %}
{% block author %}
    Auteur
{% endblock %}
{% block title %}
    Title
{% endblock %}

{% block content %}

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Points de vente</h1>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Tous mes points de vente</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Adresse</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Adresse</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                    {% for store in allStores %}
                        <tr>
                            <td>{{ store.name }}</td>
                            <td>{{ store.description }}</td>
                            <td>
                                {{ store.address }}<br>
                                {{ store.zipCode }} {{ store.city }}<br>
                                {{ store.country }}
                            </td>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <a class="btn btn-success mx-1" href="store/read/{{ store.id }}" title="Voir">
                                        <i class="fab fa-readme fa-fw"></i>
                                    </a>                           
                                    <a class="btn btn-warning mx-1" href="store/update/{{ store.id }}" title="Modifier">
                                        <i class="fa fa-pencil-alt fa-fw"></i>
                                    </a>
                                    <a class="btn btn-danger mx-1" href="store/delete/{{ store.id }}" title="Supprimer">
                                        <i class="fas fa-trash-alt fa-fw"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}