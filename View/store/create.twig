                        {{ form.checkbox('Lait', 'Lait, beurre, glace') }} #}

                        <br>
                        <div id="success"></div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary " id="createStoreButton">Soumettre le point de vente</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section><!-- End Create Store Section -->
    
{% endblock %}