    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Ajouter un point de vente</h1>
    </div>

    <!-- ======= Create Store Section ======= -->
    <section id="createStore" class="section">
        <div class="container">
