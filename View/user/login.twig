{% extends 'authentication.twig' %}
{% import 'form.twig' as form %}

{% block description %}
	Description
{% endblock %}
{% block author %}
	Auteur
{% endblock %}
{% block title %}
	Title
{% endblock %}

{% block content %}

	<!-- ======= Login Section ======= -->
	<section id="login" class="section">
		<div class="container">
			<div class="section-heading">
				<h1>Connexion</h1>
			</div>
			<div class="row">
				<div class="col-lg-8 col-md-10 mx-auto form">
					<form name="loginForm" id="loginForm" action="" method="POST">
						{{ form.email('email', 'Adresse de messagerie', 'required') }}
						{{ form.password('password', 'Mot de passe', 'required') }}
						<br>
						<div class="text-center">
							<button type="submit" class="btn btn-primary" id="loginButton">Connexion</button>
						</div>
					</form>
					<hr>
					<div class="text-center">
						<a class="small" href="/user/register">Créer un compte !</a>
					</div>
					<div class="text-center">
						<a class="small" href="/user/forgotPassword">Mot de passe oublié ?</a>
					</div>
				</div>
			</div>
		</div>
	</section><!-- End Login Section -->

{% endblock %}