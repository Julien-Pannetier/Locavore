{% macro text(name, label, message, placeholder = null, value = null) %}
    <div class="control-group">
        <div class="form-group controls">
            <label for="{{ name }}">{{ label }}</label>
            <input type="text" id="{{ name }}" name="{{ name }}" class="form-control" required data-validation-required-message="{{ message }}" placeholder="{{ placeholder }}" value="{{ value }}">
            <p class="help-block text-danger"></p>
        </div>
    </div>
{% endmacro %}

