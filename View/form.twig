{% macro select(name, label, options, message, selected = null) %}
    <div class="control-group">
        <div class="form-group controls">
            <label for="{{ name }}">{{ label }}</label>
            <select id="{{ name }}" name="{{name}}" class="form-control" required data-validation-required-message="{{ message }}">
                <option value="">Veuillez choisir...</option>
                {% for option in options %}
                    {% if option.value == selected %}
                        <option value="{{option.value}}" selected>{{ option.value }}</option>
                    {% else %}
                        <option value="{{option.value}}">{{ option.value }}</option>
                    {% endif %}
                {% endfor %}
            </select>
            <p class="help-block text-danger"></p>
        </div>
    </div>
{% endmacro %}

{% macro checkbox(id, name, label, value, checked = null) %}
    <div class="checkbox">
        <input class="checkbox__input" type="checkbox" id="{{ id }}" name="{{ name }}" value="{{ value }}" {% if checked %} checked="checked"{% endif %}/>
        <label class="checkbox__label" for="{{ id }}">
            {{ label }}
        </label>
    </div>
{% endmacro %}