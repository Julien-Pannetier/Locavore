{% macro select(name, label, options, message) %}
    <div class="control-group">
        <div class="form-group controls">
            <label for="{{ name }}">{{ label }}</label>
            <select id="{{ name }}" name="{{name}}" class="form-control" required data-validation-required-message="{{ message }}">
                <option value="">Veuillez choisir...</option>
                {% for option in options %}
                    {% if option.value == selected %}
                        <option value="{{option.value}}" selected>{{ option.value }}</option>
                    {% else %}
                        <option value="{{option.value}}">{{ option.value }}</option>
                    {% endif %}
                {% endfor %}
            </select>
            <p class="help-block text-danger"></p>
        </div>
    </div>
{% endmacro %}

{% macro checkbox(id, name, label, value) %}
    <div class="control-group">
        <div class="form-group controls checkbox">
            <input type="checkbox" id="{{ id }}" name="{{ name }}" class="form-control" value="{{ value }}" />
            <label for="{{ id }}">{{ label }}</label>
        </div>
    </div>
{% endmacro %}